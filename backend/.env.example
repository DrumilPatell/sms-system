# Database
# Using pg8000 driver - pure Python, no compilation needed
DATABASE_URL=postgresql+pg8000://postgres:your_password@localhost:5432/sms_db

# JWT Settings
SECRET_KEY=your-secret-key-min-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# OAuth - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/auth/microsoft/callback
MICROSOFT_TENANT_ID=common

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/github/callback

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Admin Emails (comma-separated)
ADMIN_EMAILS=admin@example.com,admin@university.edu

# Faculty Domain (emails ending with this will be faculty)
FACULTY_DOMAIN=faculty.university.edu
